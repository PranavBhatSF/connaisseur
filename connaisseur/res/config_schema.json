{
    "type": "object",
    "properties": {
        "kubernetes": {
            "type": "object",
            "properties": {
                "deployment": {
                    "type": "object",
                    "properties": {
                        "tls": {
                            "type": "object",
                            "properties": {
                                "cert": {
                                    "type": "string"
                                },
                                "key": {
                                    "type": "string"
                                }
                            },
                            "dependentRequired": {
                                "cert": ["key"],
                                "key": ["cert"]
                            }
                        }
                    }
                }
            }
        },
        "validators": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[^\/\\\\]+$"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "notaryv1",
                            "notaryv2",
                            "cosign",
                            "static"
                        ]
                    }
                },
                "required": [
                    "name",
                    "type"
                ],
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "notaryv1"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "host": {
                                    "type": "string",
                                    "pattern": "(([-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6})|(localhost))(\\:\\d{2,5})?"
                                },
                                "trustRoots": {
                                    "type": [
                                        "array",
                                        "null"
                                    ],
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "key": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "key"
                                        ]
                                    },
                                    "minItems": 0,
                                    "uniqueItems": true
                                },
                                "isAcr": {
                                    "type": "boolean"
                                },
                                "cert": {
                                    "type": "string",
                                    "pattern": "(?:-+BEGIN\\sCERTIFICATE[-]+)\n(?:(?:[A-Za-z0-9+\/\\s])*={0,4})\n(?:-+END\\sCERTIFICATE[-]+)"
                                },
                                "auth": {
                                    "type": "object",
                                    "oneOf": [
                                        {
                                            "properties": {
                                                "username": {
                                                    "type": "string"
                                                },
                                                "password": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "username",
                                                "password"
                                            ]
                                        },
                                        {
                                            "properties": {
                                                "secretName": {
                                                    "type": "string",
                                                    "pattern": "[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*"
                                                }
                                            },
                                            "required": [
                                                "secretName"
                                            ]
                                        }
                                    ]
                                }
                            },
                            "required": [
                                "host",
                                "trustRoots"
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "notaryv2"
                                }
                            }
                        },
                        "then": {}
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "cosign"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "host": {
                                    "type": "string",
                                    "pattern": "(https?:\\/\\/)?(([a-z0-9]+([\\-\\.]{1}[a-z0-9]+)*\\.[a-z]{2,5})|(localhost))(:[0-9]{1,5})?(\\/.*)?"
                                },
                                "trustRoots": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "key": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "name",
                                            "key"
                                        ]
                                    },
                                    "minItems": 1,
                                    "uniqueItems": true
                                },
                                "auth": {
                                    "type": "object",
                                    "oneOf": [
                                        {
                                            "properties": {
                                              "secretName": {
                                                  "type": "string",
                                                  "pattern": "[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*"
                                              }
                                            },
                                            "required": [
                                                "secretName"
                                            ]
                                        },
                                        {
                                            "properties": {
                                              "k8sKeychain": {
                                                  "type": "boolean"
                                              }
                                            },
                                            "required": [
                                                "k8sKeychain"
                                            ]
                                        }
                                    ]
                                },
                                "cert": {
                                    "type": "string",
                                    "pattern": "(?:-+BEGIN\\sCERTIFICATE[-]+)\n(?:(?:[A-Za-z0-9+\/\\s])*={0,4})\n(?:-+END\\sCERTIFICATE[-]+)"
                                },
                                "host": {
                                    "type": "string",
                                    "pattern": "(([-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6})|(localhost))(\\:\\d{2,5})?"
                                }
                            },
                            "required": [
                                "trustRoots"
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "static"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "approve": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "approve"
                            ]
                        }
                    }
                ]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "policy": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pattern": {
                        "type": "string",
                        "pattern": "^((\\w+\\.[\\.\\w]*\\/)?([^\\s]+\\/)?)([^\\/\\:@]+)((@sha256:([a-f0-9]{64}))|(:(.+)))?$"
                    },
                    "validator": {
                        "type": "string"
                    },
                    "with": {
                        "type": "object"
                    }
                },
                "required": [
                    "pattern"
                ]
            }
        }
    },
    "required": [
        "validators",
        "policy"
    ]
}
